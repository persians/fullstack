<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" type="text/css" href="/assets/post.css" />
    <link
      rel="stylesheet"
      href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
      integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p"
      crossorigin="anonymous"
    />
    <link
      href="https://cdn.quilljs.com/1.3.6/quill.snow.css"
      rel="stylesheet"
    />
    <title>Blog Post Form</title>
  </head>
  <body class="dark-mode">
    <header>
      <a href="/">Go back</a>
      <% if (req.session.user) { %>
      <p>Hello, <%= req.session.user.name %></p>
      <div class="dropdown">
        <i class="fas fa-user-circle dropdown-toggle"> My Profile</i>
        <div class="dropdown-menu">
          <a href="/post">Create Post</a>
          <a href="/my-posts">My Posts</a>
          <a href="/logout">Log Out</a>
        </div>
      </div>
      <% } else { %>
      <a href="/login">Login</a>
      <% } %>
    </header>
    <main>
      <h2>Create a New Blog Post</h2>
      <br /><br />
      <form action="/post" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="title">Title:</label>
          <input type="text" name="title" class="form-control" />
        </div>
        <div class="form-group">
          <label for="text">Text:</label>
          <div id="quill-toolbar">
            <!-- Add the toolbar options here -->
          </div>
          <div id="quill-editor" class="form-control" style="height: 300px">
            <!-- Quill will create the editor in this container -->
          </div>
          <input type="hidden" name="text" id="hidden-text-input" />
        </div>
        <div class="form-group">
          <label for="img">Image:</label>
          <input type="file" accept="image/*" name="img" class="form-control" />
        </div>
        <button
          type="submit"
          class="btn btn-primary"
          onclick="submitForm(event)"
        >
          Submit
        </button>
      </form>
    </main>
    <script src="/assets/main.js"></script>
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script>
      const toolbarOptions = [
        ["bold", "italic", "underline", "strike"],
        ["blockquote", "code-block"],
        [{ header: 1 }, { header: 2 }],
        [{ list: "ordered" }, { list: "bullet" }],
        [{ script: "sub" }, { script: "super" }],
        [{ indent: "-1" }, { indent: "+1" }],
        [{ direction: "rtl" }],
        [{ size: ["small", false, "large", "huge"] }],
        [{ header: [1, 2, 3, 4, 5, 6, false] }],
        [{ color: [] }, { background: [] }],
        [{ font: [] }],
        [{ align: [] }],
        ["clean"],
      ];

      const quill = new Quill("#quill-editor", {
        modules: { toolbar: toolbarOptions },
        theme: "snow",
      });

      function submitForm(e) {
        e.preventDefault();

        // Get the HTML content of the editor
        const editorContent = quill.root.innerHTML;

        // Set the value of the hidden input field
        document.getElementById("hidden-text-input").value = editorContent;

        // Submit the form
        e.target.closest("form").submit();
      }
    </script>
  </body>
</html>
